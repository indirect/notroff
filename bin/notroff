#!/usr/bin/env ruby
require 'pp'
require "notroff"

options={}
formatter_class = HtmlFormatter

while true
  if ARGV.first == '-o'
    formatter_class = OdtFormatter
    ARGV.shift
  elsif ARGV.first == '-h'
    formatter_class = HtmlFormatter
    ARGV.shift
  elsif ARGV.first == '-d'
    formatter_class = DocbookFormatter
    ARGV.shift
  elsif ARGV.first == '-v'
    Logger.verbose = true
    ARGV.shift
  else
    break
  end
end

unless ARGV.size == 2
  raise "Usage: notroff [-d] <nr file> <output file>"
end


f = formatter_class.new( ARGV[0], ARGV[1]  )
f.process


















